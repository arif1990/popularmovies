<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.co.lazystudio.watchIt_freemoviedatabase.DetailMovie"
    tools:showIn="@layout/activity_detail_movie"
    android:id="@+id/content_container">

    <!-- POSTER + TITLE -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/movie_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/placeholder">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poster_progressbar"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/poster_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/movie_title_framelayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:background="?android:colorBackground">

                <RelativeLayout
                    android:id="@+id/movie_title_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/movie_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/smaller_margin"
                        style="@style/AppTheme.MovieTitle"
                        android:maxLines="2"/>
                    <TextView
                        android:id="@+id/movie_releasedate_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.TextSecondary"
                        android:layout_below="@id/movie_title_textview"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/movie_runtime_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.TextSecondary"
                        android:layout_below="@id/movie_title_textview"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@+id/movie_releasedate_textview"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:background="?android:colorBackground"
        android:visibility="gone">
        <!-- TAGLINE -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movie_tagline_relativelayout"
            android:visibility="gone">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:src="@drawable/left_tag"
                android:layout_toLeftOf="@+id/movie_tagline_textview"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="false"
                android:id="@+id/movie_tagline_left_imageview"
                android:alpha="0.54" />
            <TextView
                android:id="@+id/movie_tagline_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smaller_margin"
                android:layout_marginBottom="@dimen/smaller_margin"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:src="@drawable/right_tag"
                android:layout_toRightOf="@+id/movie_tagline_textview"
                android:layout_centerVertical="true"
                android:id="@+id/movie_tagline_right_imageview"
                android:alpha="0.54" />
        </RelativeLayout>

        <!-- GENRES -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/genre_flexboxlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:visibility="gone"
            style="@style/AppTheme.FlexboxLayout"/>

        <!-- RATE + POPULARITY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/smaller_margin"
                    app:cardCornerRadius="@dimen/smaller_rounded_corner">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">
                        <TextView
                            android:id="@+id/movie_ratelabel_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="@string/label_rate"/>
                        <TextView
                            android:id="@+id/movie_rateaverage_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_ratelabel_textview"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/movie_ratecount_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_rateaverage_textview"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="something"
                            android:visibility="invisible" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/smaller_margin"
                    app:cardCornerRadius="@dimen/smaller_rounded_corner">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">
                        <TextView
                            android:id="@+id/movie_popularitylabel_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="@string/label_popularity"/>
                        <TextView
                            android:id="@+id/movie_popularity_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_popularitylabel_textview"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_popularity_textview"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="..."
                            android:visibility="invisible"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <!-- BUDGET + REVENUE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smaller_line_spacing">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/smaller_margin"
                    app:cardCornerRadius="@dimen/smaller_rounded_corner">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">
                        <TextView
                            android:id="@+id/movie_budget_label_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="@string/label_budget"/>
                        <TextView
                            android:id="@+id/movie_budget_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_budget_label_textview"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/smaller_margin"
                    app:cardCornerRadius="@dimen/smaller_rounded_corner">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">
                        <TextView
                            android:id="@+id/movie_revenue_label_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            style="@style/AppTheme.MovieDetailSecondary"
                            android:text="@string/label_revenue"/>
                        <TextView
                            android:id="@+id/movie_revenue_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_revenue_label_textview"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <!-- OVERVIEW -->
        <RelativeLayout
            android:id="@+id/movie_overview_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="gone">
            <TextView
                android:id="@+id/movie_overview_label_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/label_overview"
                style="@style/AppTheme.MovieCategoryTitle"/>
            <TextView
                android:id="@+id/movie_overview_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smaller_line_spacing"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/movie_overview_label_textview"/>
        </RelativeLayout>

        <!-- COLLECTION -->
        <RelativeLayout
            android:id="@+id/movie_collection_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:visibility="gone">
            <com.balysv.materialripple.MaterialRippleLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smaller_line_spacing"
                style="@style/AppTheme.Ripple">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/placeholder">
                    <ProgressBar
                        android:id="@+id/movie_collection_progressbar"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <id.co.lazystudio.watchIt_freemoviedatabase.view.AspectRatioImageView
                        android:id="@+id/movie_collection_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dominantMeasurement="width"
                        app:aspectRatio="3"/>
                    <TextView
                        android:id="@+id/movie_collection_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/smaller_margin"
                        android:paddingBottom="@dimen/smaller_margin"
                        style="@style/AppTheme.MovieCollectionTitle"
                        android:visibility="gone"/>
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </RelativeLayout>

        <!-- SIMILAR -->
        <RelativeLayout
            android:id="@+id/movie_similar_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:visibility="gone">
            <TextView
                android:id="@+id/movie_similar_label_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/label_similar"
                style="@style/AppTheme.MovieCategoryTitle"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_similar_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_similar_label_textview"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <!-- KEYWORDS -->
        <RelativeLayout
            android:id="@+id/movie_keyword_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:visibility="gone">
            <TextView
                android:id="@+id/movie_keyword_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/label_keyword"
                style="@style/AppTheme.MovieCategoryTitle"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/keyword_flexboxlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_keyword_label_textview"
                android:layout_marginTop="@dimen/smaller_line_spacing"
                style="@style/AppTheme.FlexboxLayout"/>
        </RelativeLayout>

        <!-- RELATED YOUTUBE -->
        <RelativeLayout
            android:id="@+id/movie_video_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_spacing"
            android:visibility="gone">
            <TextView
                android:id="@+id/movie_video_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/label_video"
                style="@style/AppTheme.MovieCategoryTitle"/>
            <GridView
                android:id="@+id/movie_video_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_video_label_textview"
                android:numColumns="2"
                android:verticalSpacing="@dimen/small_margin"
                android:horizontalSpacing="@dimen/small_margin"
                android:padding="@dimen/small_margin"
                android:scrollbarStyle="outsideOverlay">

            </GridView>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/refresh_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:padding="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_refresh"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
