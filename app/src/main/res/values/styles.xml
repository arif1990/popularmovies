<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.NoActionBar">
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MovieCategoryTitle">
        <item name="android:textSize">@dimen/category_title</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="AppTheme.MovieTitle">
        <item name="android:textSize">@dimen/movie_title</item>
    </style>

    <style name="AppTheme.TextSecondary">
        <item name="android:alpha">0.54</item>
    </style>

    <style name="AppTheme.MovieViewAll" parent="AppTheme.TextSecondary">
        <item name="android:textSize">@dimen/view_all</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="AppTheme.MovieDetailSecondary" parent="AppTheme.TextSecondary">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.FlexboxLayout">
        <item name="flexWrap">wrap</item>
        <item name="justifyContent">center</item>
        <item name="alignItems">center</item>
        <item name="alignContent">center</item>
    </style>

    <!--<style name="AppTheme.GenreFlexboxLayout" parent="AppTheme.FlexboxLayout">-->
        <!--<item name=""-->
    <!--</style>-->

    <!--<style name="AppTheme.KeywordTagContainer" parent="AppTheme.FlexboxLayout">-->
        <!--<item name="tag_background_color">@color/gray_500</item>-->
        <!--<item name="tag_border_color">@color/gray_500</item>-->
    <!--</style>-->

    <style name="AppTheme.MovieCollectionTitle" parent="AppTheme.MovieCategoryTitle">
        <item name="android:textSize">@dimen/category_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/black_50</item>
    </style>

</resources>
